<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MovieApp.Views.MainPage">
    <StackLayout BackgroundColor="#47A4D6">
        <StackLayout BackgroundColor="#47A4D6" VerticalOptions="Center" Padding ="50,70,50,50" >
            <Label Text="Hello, what do you want to watch?" HorizontalTextAlignment="Center" VerticalOptions="Center" TextColor="White" FontAttributes="Bold" FontSize="Title"/>
            <Frame Padding="10" IsClippedToBounds="True" BackgroundColor="Red" CornerRadius="30" HasShadow="False">
                <Entry  VerticalOptions="Fill" BackgroundColor="#89C0E3" Placeholder="Search" PlaceholderColor="White" TextColor="White"/>
            </Frame>
            <SearchBar BackgroundColor="Transparent" CancelButtonColor="White"/>
        </StackLayout>
        <Frame HasShadow="False" BackgroundColor="#263647" CornerRadius="30" VerticalOptions="FillAndExpand">

        </Frame>
    </StackLayout>
</ContentPage>